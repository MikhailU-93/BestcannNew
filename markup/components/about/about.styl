.about
  padding 80px 0 50px
  
  background-image url(__static__assets/about/back.jpg)
  background-repeat no-repeat
  background-size 925px 680px
  background-position -10% 50%

  @media (max-width bDesktop)
    background-position -40% 50%

  @media (max-width bLaptop)
    background-position -100% 50%

  @media (max-width bTablet)
    padding 60px 0 40px

    background-position -400px 100%

  &_wrap
    max-width ContentWidth
    margin 0 auto
    box-sizing border-box

    @media (max-width bTablet)
      max-width tabletWidth

  &_main
    display flex
    align-items center
    justify-content space-between
    width 100%
    padding-left 100px
    box-sizing border-box

    @media (max-width bTablet)
      padding-left 50px
      

  &_infoGroup
    max-width 600px
    display flex
    flex-direction column
    align-items flex-end

  &_info
    display block
    width 100%
    margin-bottom 50px

    font-size 20px
    line-height 28px
    text-align right

    @media (max-width bTablet)
      font-size 18px

    & p
      &:first-child
        margin-top 0

      &:last-child
        margin-bottom 0


  &_photo
    display block
    width 270px
    height 605px