.about
  padding 80px 0 50px
  
  background-image url(__static__assets/about/back.jpg)
  background-repeat no-repeat
  background-size 925px 680px
  background-position -10% 50%

  @media (max-width bDesktop)
    background-position -40% 50%

  @media (max-width bLaptop)
    background-position -100% 50%

  @media (max-width bTablet)
    padding 60px 0 40px

    background-position -400px 100%

  @media (max-width bSmallTablet)
    padding 50px 0 30px

    background-size 600px 450px
    background-position 0 100px

  @media (max-width bPhone)
    padding 40px 0 25px

  @media (max-width bSmallPhone)
    padding 35px 0 20px

    background-size 490px 360px
    background-position -50px 50px

  &_wrap
    max-width ContentWidth
    margin 0 auto
    box-sizing border-box

    @media (max-width bTablet)
      max-width tabletWidth

    @media (max-width bSmallTablet)
      max-width smallTabletWidth

    @media (max-width bPhone)
      padding 0 15px

    @media (max-width bSmallPhone)
      padding 0 10px

  &_main
    display flex
    align-items center
    justify-content space-between
    width 100%
    padding-left 100px
    box-sizing border-box

    @media (max-width bTablet)
      padding-left 50px

    @media (max-width bSmallTablet)
      padding 0
      flex-direction column
      

  &_infoGroup
    max-width 600px
    width 100%
    display flex
    flex-direction column
    align-items flex-end

    @media (max-width bSmallTablet)
      align-items center

  &_info
    display block
    width 100%
    margin-bottom 50px

    font-size 20px
    line-height 28px
    text-align right

    @media (max-width bTablet)
      margin-bottom 40px

      font-size 18px
      line-height 24px

    @media (max-width bSmallTablet)
      text-align center
      font-size 17px
      line-height 22px

    @media (max-width bPhone)
      margin-bottom 30px

      font-size 16px

    @media (max-width bSmallPhone)
      margin-bottom 25px

      font-size 14px
      
    & p
      margin-top 0

      @media (max-width bSmallPhone)
        margin-bottom 10px
        
      &:last-child
        margin-bottom 0


  &_photo
    display block
    width 270px
    height 605px

    @media (max-width bSmallTablet)
      width 162px
      height 365px
      margin-bottom 30px

    @media (max-width bPhone)
      width 146px
      height 330px
      margin-bottom 20px

    @media (max-width bSmallPhone)
      width 122px
      height 270px