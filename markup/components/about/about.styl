.about
  padding 50px 0

  background-color main-color-2

  &_wrap
    max-width ContentWidth
    margin 0 auto

  &_main
    display flex
    align-items center
    justify-content space-between

  &_infoGroup
    max-width 600px
    display flex
    flex-direction column
    align-items flex-start

  &_info
    display block
    width 100%
    margin-bottom 50px

    font-size 20px

    & p
      &:first-child
        margin-top 0

      &:last-child
        margin-bottom 0


  &_photo
    display block
    width 300px
    height 300px