.main
  &_wrap
    max-width ContentWidth
    margin 0 auto
    padding 150px 0
    display flex
    align-items center
    justify-content center

  &_titleGroup
    display flex
    align-items center
    flex-direction column

  &_title
    margin 0 0 30px

    font-size 60px
    font-family Gilroy
    font-weight 800

    text-align center

  &_subtitle
    margin-bottom 30px
    display block
    font-size 35px
    font-weight 600

    text-align center

  &_link
    display block
    padding 15px 20px
    border-radius 10px

    text-decoration none
    color White

    background-color #37d3d3
