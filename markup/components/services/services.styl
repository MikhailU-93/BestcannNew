.services
  padding 80px 0 50px

  @media (max-width bTablet)
    padding 60px 0 40px

  &_wrap
    max-width ContentWidth
    margin 0 auto
    display flex
    flex-direction column
    align-items center

    @media (max-width bTablet)
      max-width tabletWidth

    @media (max-width bSmallTablet)
      max-width smallTabletWidth

  &_title
    margin 0 0 50px

    @media (max-width bTablet)
      margin 0 0 30px

    @media (max-width bSmallTablet)
      margin 0 0 25px

  &_sliderWrap
    position relative
    margin-bottom 50px

    width 100%

    @media (max-width bTablet)
      margin-bottom 40px

    @media (max-width bSmallTablet)
      margin-bottom 35px

  &_btn
    position absolute
    top 50%
    transform translateY(-50%)

    display block

    width 40px
    height 30px

    cursor: pointer

    fill main-color-1
    transition .2s all

    @media (max-width bTablet)
      width 35px
      height 25px

    &:hover
      fill hover-color

    &.-prev
      left 0
    
    &.-next
      right 0

  &_slider
    width calc(100% - 100px)
    padding 50px 0

    @media (max-width bTablet)
      padding 45px 0
      width calc(100% - 150px)

    @media (max-width bSmallTablet)
      width calc(100% - 80px)

  &_items
    display flex

  &_item
    display flex
    flex-direction column
    width 350px
    height auto
    border-radius 15px
    overflow hidden

    background-color rgba(55, 211, 211, .6)

    @media (max-width bTablet)
      width 300px

    &:nth-child(2)
      background-color rgba(248, 220, 30, .8)

    &:nth-child(3)
      background-color rgb( 132, 217, 54, .4)

  &_photoWrap
    position relative

    display block
    width 100%
    height 250px

    @media (max-width bTablet)
      height 220px

    &::before
      content ''
      position absolute
      width 100%
      height 100%

      background-color hover-color
      opacity .6

  &_photo
    display block
    width 100%
    height 100%

    object-fit cover
    object-position center

  &_infoGroup
    display flex
    flex-direction column
    width 100%
    height 100%
    box-sizing border-box
    padding 15px

    @media (max-width bTablet)
      padding 13px

    //background-color rgba(55, 211, 211, .6)

  &_item:nth-child(2) &_photoWrap::before
    background-color rgba(248, 220, 30, .8)

  &_item:nth-child(3) &_photoWrap::before
    background-color rgb( 132, 217, 54, .4)

  &_subtitle
    position relative

    margin 0 0 30px

    @media (max-width bTablet)
      margin 0 0 25px

    &::before
      content ''
      position absolute
      left 0
      bottom -10px

      display block
      width 70px
      height 5px

      background-color hover-color

      @media (max-width bTablet)
        bottom -7px

  &_info
    display block
    width 100%
    height 100%
    display flex
    align-items center

  &_footLine
    width 100%
    padding 15px
    margin-top auto
    box-sizing border-box
    display flex
    align-items center
    justify-content space-between

    @media (max-width bTablet)
      padding 13px
      justify-content center

  &_more
    @media (max-width bTablet)
      margin-right 20px

  &_more,
  &_formLink
    display block
    padding 15px 20px
    border-radius 10px
    border 1px solid main-color-1

    text-decoration none
    color main-color-1

    @media (max-width bTablet)
      padding 13px 18px

  &_notice
    display block
    margin-bottom 30px

    text-align center
    color main-color-1

