.services
  position relative
  z-index 5
  
  padding 80px 0 50px

  @media (max-width bTablet)
    padding 60px 0 40px

  @media (max-width bSmallTablet)
    padding 50px 0 30px

  @media (max-width bPhone)
    padding 40px 0 25px

  @media (max-width bSmallPhone)
    padding 35px 0 20px

  @media (max-width bSmallestPhone)
    padding 30px 0 20px

  &_wrap
    max-width ContentWidth
    margin 0 auto
    display flex
    flex-direction column
    align-items center

    @media (max-width bTablet)
      max-width tabletWidth

    @media (max-width bSmallTablet)
      max-width smallTabletWidth

    @media (max-width bPhone)
      padding 15px

    @media (max-width bSmallPhone)
      padding 0 10px

  &_title
    margin 0 0 50px

    @media (max-width bTablet)
      margin 0 0 30px

    @media (max-width bSmallTablet)
      margin 0 0 25px

    @media (max-width bSmallPhone)
      margin 0 0 20px

  &_sliderWrap
    position relative
    margin-bottom 50px

    width 100%

    @media (max-width bTablet)
      margin-bottom 40px

    @media (max-width bSmallTablet)
      margin-bottom 35px

    @media (max-width bSmallPhone)
      margin-bottom 30px

  &_btn
    position absolute
    top 50%
    transform translateY(-50%)

    display block

    width 40px
    height 30px

    cursor: pointer

    fill main-color-1
    transition .2s all

    @media (max-width bTablet)
      width 35px
      height 25px

    @media (max-width bPhone)
      width 30px
      height 20px

    @media (max-width bSmallestPhone)
      width 27px
      height 18px

    &:hover
      fill hover-color

    &.-prev
      left 0
    
    &.-next
      right 0

  &_slider
    width calc(100% - 100px)
    padding 50px 0

    @media (max-width bTablet)
      padding 45px 0
      width calc(100% - 150px)

    @media (max-width bSmallTablet)
      padding 40px 0
      width calc(100% - 80px)

    @media (max-width bSmallPhone)
      padding 35px 0

    @media (max-width bSmallestPhone)
      width calc(100% - 60px)

  &_items
    display flex

  &_item
    display flex
    flex-direction column
    width 350px
    height auto
    border-radius 15px
    overflow hidden

    background-color rgba(55, 211, 211, .6)

    @media (max-width bTablet)
      width 300px

    @media (max-width bSmallPhone)
      width 280px

    @media (max-width bSmallestPhone)
      max-width 280px
      width 100%

    &:nth-child(2)
      background-color rgba(248, 220, 30, .8)

    &:nth-child(3)
      background-color rgb( 132, 217, 54, .4)

  &_photoWrap
    position relative

    display block
    flex-shrink 0
    width 100%
    height 220px

    @media (max-width bTablet)
      height 220px

    @media (max-width bPhone)
      height 200px

    @media (max-width bSmallPhone)
      height 180px

    @media (max-width bSmallestPhone)
      height 130px

  & picture
    width 100%
    height 100%

    & > *
      object-fit cover
      object-position center

  &_filter
    position absolute
    top 0
    left 0
    z-index 2

    width 100%
    height 100%

  &_photo
    flex-shrink 0
    display block
    width 100%
    height 100%

    object-fit cover
    object-position center

  &_infoGroup
    display flex
    flex-direction column
    width 100%
    height 100%
    box-sizing border-box
    padding 15px

    @media (max-width bTablet)
      padding 13px

  &_subtitle
    position relative

    margin 0 0 30px

    @media (max-width bTablet)
      margin 0 0 25px

    &::before
      content ''
      position absolute
      left 0
      bottom -10px

      display block
      width 70px
      height 5px

      background-color hover-color

      @media (max-width bTablet)
        bottom -7px

        width 60px
        height 3px

  &_info
    display block
    width 100%
    height 100%
    display flex
    align-items center
    margin-bottom 10px

  &_priceWrap
    display flex
    align-items center

  &_priceTitle
    display block
    margin-right 10px

  &_footLine
    width 100%
    padding 15px
    margin-top auto
    box-sizing border-box
    display flex
    align-items center
    justify-content space-between

    @media (max-width bTablet)
      padding 13px
      justify-content center

    @media (max-width bPhone)
      justify-content space-between

  &_more
    @media (max-width bTablet)
      margin-right 15px

    @media (max-width bSmallestPhone)
      margin-right 5px

  &_more,
  &_formLink
    display block
    padding 15px 20px
    border-radius 10px
    border 1px solid main-color-1

    text-decoration none
    color main-color-1

    @media (max-width bTablet)
      padding 13px 18px

    @media (max-width bPhone)
      padding 12px 16px

    @media (max-width bSmallestPhone)
      padding 10px

  &_notice
    display block
    margin-bottom 30px

    text-align center
    color main-color-1

    @media (max-width bPhone)
      margin-bottom 20px

