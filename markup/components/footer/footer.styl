.footer
  background-color main-color-2

  &_wrap
    max-width ContentWidth
    margin 0 auto
    display flex
    align-items center
    justify-content space-between
    padding 20px 0

    @media (max-width bTablet)
      max-width tabletWidth
      padding 15px 0

    @media (max-width bSmallTablet)
      max-width smallTabletWidth
      flex-direction column

  &_notice
    display block

    color rgba(255, 255, 255, .6)

    @media (max-width bSmallTablet)
      margin-bottom 10px

  &_dev
    display block

    color rgba(255, 255, 255, .6)

  &_link
    margin-left 5px

    color main-color-1
    cursor pointer

    transition .2s all

    &:hover
      color hover-color
  