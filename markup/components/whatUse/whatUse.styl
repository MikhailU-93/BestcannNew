.whatUse
  padding 80px 0 50px

  background-image url(__static__assets/whatUse/back.jpg)
  background-repeat no-repeat
  background-position 0 100%
  background-size contain

  @media (max-width bTablet)
    padding 60px 0 40px

    background-size 50%

  &_wrap
    max-width ContentWidth
    margin 0 auto

    @media (max-width bTablet)
      max-width tabletWidth

  &_title
    margin 0 0 50px

    @media (max-width bTablet)
      margin 0 0 40px

  &_sliderWrap
    position relative

    width 100%

  &_btn
    position absolute
    top 50%
    transform translateY(-50%)

    display block

    width 40px
    height 30px

    cursor: pointer

    fill main-color-2
    transition .2s all

    @media (max-width bTablet)
      width 35px
      height 25px

    &:hover
      fill hover-color

    &.-prev
      left 0
    
    &.-next
      right 0

  &_slider
    display block
    width calc(100% - 100px)
    box-sizing border-box
    padding 50px 30px

    @media (max-width bTablet)
      width calc(100% - 80px)

  &_items
    display flex
    width 100%
    //grid-template-columns repeat(3, auto)

  &_item
    display flex
    flex-direction column
    flex-shrink 0
    width 300px
    height auto
    border-radius 15px
    overflow hidden

    background-color main-color-1

    box-shadow: 0 14px 28px rgba(0,0,0,0.25), 0 10px 10px rgba(0,0,0,0.22)

    @media (max-width bTablet)
      width 250px

      box-shadow: 0 12px 24px rgba(0,0,0,0.25), 0 8px 8px rgba(0,0,0,0.22)

  &_photo
    display block
    width 100%
    height 250px

    object-fit contain
    object-position center

    @media (max-width bTablet)
      height 220px

  &_infoGroup
    display flex
    flex-direction column
    width 100%
    height 100%
    box-sizing border-box
    padding 15px
    border-top 1px solid main-color-2

  &_name
    position relative

    margin 0 0 30px

    color main-color-2

    &::before
      content ''
      position absolute
      left 0
      bottom -10px

      display block
      width 70px
      height 5px

      background-color hover-color

  &_info
    display block
    width 100%
    height 100%
    display flex
    align-items center
    justify-content center

    color main-color-2