.whatUse
  padding 80px 0 50px

  background-image url(__static__assets/whatUse/back.jpg)
  background-repeat no-repeat
  background-position 0 100%
  background-size contain

  @media (max-width bTablet)
    padding 60px 0 40px

    background-size 50%

  @media (max-width bSmallTablet)
    padding 50px 0 30px

  @media (max-width bPhone)
    padding 40px 0 25px

  @media (max-width bSmallPhone)
    padding 35px 0 20px

  @media (max-width bSmallestPhone)
    padding 30px 0 20px

  &_wrap
    max-width ContentWidth
    margin 0 auto

    @media (max-width bTablet)
      max-width tabletWidth
    
    @media (max-width bSmallTablet)
      max-width smallTabletWidth

    @media (max-width bPhone)
      padding 0 15px

    @media (max-width bSmallPhone)
      padding 0 10px

  &_title
    margin 0 0 50px

    @media (max-width bTablet)
      margin 0 0 40px

    @media (max-width bPhone)
      margin 0 0 25px

    @media (max-width bSmallPhone)
      margin 0 0 20px

  &_sliderWrap
    position relative

    width 100%

  &_btn
    position absolute
    top 50%
    transform translateY(-50%)

    display block

    width 40px
    height 30px

    cursor: pointer

    fill main-color-2
    transition .2s all

    @media (max-width bTablet)
      width 35px
      height 25px

    @media (max-width bPhone)
      width 30px
      height 20px

    @media (max-width bSmallestPhone)
      width 27px
      height 18px

    &:hover
      fill hover-color

    &.-prev
      left 0
    
    &.-next
      right 0

  &_slider
    display block
    width calc(100% - 100px)
    box-sizing border-box
    padding 50px 35px

    @media (max-width bTablet)
      width calc(100% - 80px)

    @media (max-width bPhone)
      width calc(100% - 65px)
      padding 45px 25px

    @media (max-width bSmallPhone)
      width calc(100% - 75px)
      padding 35px 0

    @media (max-width bSmallestPhone)
      max-width 235px
      padding 35px 10px

  &_items
    display flex
    width 100%
    //grid-template-columns repeat(3, auto)

  &_item
    display flex
    flex-direction column
    flex-shrink 0
    width 300px
    height auto
    border-radius 15px
    overflow hidden

    background-color main-color-1
    
    box-shadow: 0 10px 20px rgba(0,0,0,0.25), 0 7px 7px rgba(0,0,0,0.22)

    @media (max-width bTablet)
      width 250px

    @media (max-width bSmallestPhone)
      box-shadow: 0 5px 10px rgba(0,0,0,0.25), 0 3px 3px rgba(0,0,0,0.22)

  &_photo
    flex-shrink 0
    display block
    width 100%
    height 250px

    object-fit contain
    object-position center

    & > *
      object-fit contain
      object-position center

    @media (max-width bTablet)
      height 220px

    @media (max-width bPhone)
      height 200px

    @media (max-width bSmallPhone)
      height 180px

  &_infoGroup
    display flex
    flex-direction column
    width 100%
    height 100%
    box-sizing border-box
    padding 15px
    border-top 1px solid main-color-2

    @media (max-width bPhone)
      padding 12px

  &_name
    position relative

    margin 0 0 30px

    color main-color-2

    @media (max-width bPhone)
      margin 0 0 20px

    &::before
      content ''
      position absolute
      left 0
      bottom -10px

      display block
      width 70px
      height 5px

      background-color hover-color

      @media (max-width bTablet)
        bottom -7px

        width 60px
        height 3px

  &_info
    display block
    width 100%
    height 100%
    display flex
    align-items center
    justify-content center

    color main-color-2