.buyAuto
  padding 80px 0 50px

  &_wrap
    max-width ContentWidth
    margin 0 auto

  &_items
    width 100%
    display flex
    justify-content space-between

  &_item
    width 180px
    display flex
    align-items center
    flex-direction column
    margin-bottom 40px

  &_icon
    width 100px
    height 100px
    margin-bottom 20px

    object-position center
    object-fit contain

  &_info
    display block

    font-size 16px
    text-align center
