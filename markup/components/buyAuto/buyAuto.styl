.buyAuto
  padding 80px 0 50px

  @media (max-width bTablet)
    padding 60px 0 40px

  &_wrap
    max-width ContentWidth
    margin 0 auto

    @media (max-width bTablet)
      max-width tabletWidth

  &_items
    width 100%
    display flex
    justify-content space-between

  &_item
    width 180px
    display flex
    align-items center
    flex-direction column
    margin-bottom 40px

    @media (max-width bTablet)
      width 160px
      margin-bottom 30px

  &_icon
    width 100px
    height 100px
    margin-bottom 20px

    object-position center
    object-fit contain

    @media (max-width bTablet)
      width 80px
      height 80px

  &_info
    display block

    font-size 16px
    text-align center

    @media (max-width bTablet)
      font-size 15px
