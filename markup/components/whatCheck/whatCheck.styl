.whatCheck
  padding 80px 0 50px

  background-image url(__static__assets/whatCheck/back-1.jpg)
  background-repeat no-repeat
  background-size contain
  background-position 100% 0

  @media (max-width bTablet)
    padding 60px 0 40px

    background-size 50%

  @media (max-width bSmallTablet)
    padding 50px 0 30px

  @media (max-width bPhone)
    padding 40px 0 25px

  &_wrap
    max-width ContentWidth
    margin 0 auto

    @media (max-width bTablet)
      max-width tabletWidth

    @media (max-width bSmallTablet)
      max-width smallTabletWidth

    @media (max-width bPhone)
      padding 0 15px

  &_items
    margin-top 30px
    display grid
    grid-template-columns repeat(4, auto)

    @media (max-width bSmallTablet)
      grid-template-columns repeat(3, auto)

    @media (max-width bPhone)
      display flex
      flex-wrap wrap
      justify-content space-evenly

  &_item
    position: relative
  
    width 220px
    margin-bottom 40px
    display flex
    align-items center
    flex-direction column
    border-radius 15px

    background-color main-color-1

    box-shadow: 0 14px 28px rgba(0,0,0,0.25), 0 10px 10px rgba(0,0,0,0.22)

    @media (max-width bTablet)
      width 200px
      margin-bottom 30px

    @media (max-width bSmallTablet)
      box-shadow: 0 10px 21px rgba(0,0,0,0.25), 0 7px 7px rgba(0,0,0,0.22)

    @media (max-width bPhone)
      width 205px
      margin-bottom 20px

  &_cloud
    position absolute
    top 0
    left 0
    transform translate(0, -130%)
    z-index 50

    display block
    border-radius 15px
    padding 15px
    width 150%
    box-sizing border-box

    color main-color-1
    background-color main-color-2

    opacity 0
    visibility hidden
    transition .3s all

    @media (max-width bSmallTablet)
      padding 13px

    &::before
      content ''
      position absolute
      left 50px
      bottom 0
      transform translate(-50%, 50%) rotate(45deg)

      display block
      width 10px
      height 10px

      background-color: main-color-2

  &_item:hover &_cloud
    opacity 1
    visibility visible

  &_photo
    display block
    width 100%
    height 170px
    border-radius 15px 15px 0 0

    object-fit cover
    object-position center

    @media (max-width bTablet)
      height 150px

    @media (max-width bPhone)
      height 130px

  &_nameWrap
    display flex
    justify-content center
    width 100%
    height auto
    box-sizing border-box
    padding 20px 15px
    border-top 1px solid main-color-2
    border-radius 0 0 15px 15px

    background-color main-color-1

    @media (max-width bTablet)
      padding 18px 13px

    @media (max-width bSmallTablet)
      padding 16px 12px

  &_name
    position relative

    margin 0
    height 100%

    text-align center

    &::before
      content ''
      position absolute
      left 50%
      bottom -10px
      transform translate(-50%, 0)

      display block
      width 70px
      height 3px

      background-color hover-color

      @media (max-width bTablet)
        bottom -7px
        
        width 65px

      @media (max-width bPhone)
        bottom -5px

        width 60px