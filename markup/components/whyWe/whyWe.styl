.whyWe
  position relative

  padding 80px 0 50px
  overflow hidden

  background-color main-color-2

  @media (max-width bTablet)
    background-size 70%
    padding 60px 0 40px

  @media (max-width bSmallTablet)
    padding 50px 0 30px

  @media (max-width bPhone)
    padding 40px 0 25px

    background-size 100%

  @media (max-width bSmallPhone)
    padding 35px 0 20px

  @media (max-width bSmallestPhone)
    padding 30px 0 20px

  &_bg
    position absolute
    left 110%
    top 100%
    transform translate(-100%, -100%)

    display block
    width 800px
    height 800px

    object-fit contain
    object-position center

    user-select none
    pointer-events none

  &_wrap
    position relative
    z-index 5

    max-width ContentWidth
    margin 0 auto

    @media (max-width bTablet)
      max-width tabletWidth

    @media (max-width bSmallTablet)
      max-width smallTabletWidth

    @media (max-width bPhone)
      padding 0 15px

    @media (max-width bSmallPhone)
      padding 0 10px

  &_items
    width 100%
    display grid
    grid-template-columns repeat(3, auto)

    @media (max-width bPhone)
      grid-template-columns repeat(2, auto)

    @media (max-width bSmallestPhone)
      grid-template-columns repeat(1, auto)

  &_item
    width 270px
    display flex
    align-items center
    flex-direction column
    //margin-bottom 40px
    margin 0 auto 40px

    @media (max-width bTablet)
      width 240px

    @media (max-width bSmallTablet)
      width 220px
      margin-bottom 30px

    @media (max-width bPhone)
      width 230px
      margin-bottom 20px

    @media (max-width bSmallPhone)
      width 215px

    @media (max-width bSmallestPhone)
      width 100%

  &_icon
    width 140px
    height 140px
    margin-bottom 30px

    object-position center
    object-fit contain

    & > *
      object-position center
      object-fit contain

    @media (max-width bTablet)
      width 120px
      height 120px
      margin-bottom 25px

    @media (max-width bSmallTablet)
      width 108px
      height 108px

    @media (max-width bSmallestPhone)
      width 100px
      height 100px

  &_info
    display block

    font-size 18px
    text-align center

    @media (max-width bTablet)
      font-size 16px

    @media (max-width bSmallTablet)
      font-size 15px

    @media (max-width bPhone)
      font-size 14px

    @media (max-width bSmallPhone)
      font-size 13px