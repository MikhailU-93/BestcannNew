.comments
  padding 80px 0 50px

  &_wrap
    max-width ContentWidth
    margin 0 auto

  &_title
    margin 0 0 50px

  &_sliderWrap
    position relative

    margin 0 auto
    width calc(100% - 100px)

  &_btn
    position absolute
    top 50%
    transform translateY(-50%)

    display block

    width 40px
    height 30px

    cursor: pointer

    fill main-color-2
    transition .2s all

    &:hover
      fill hover-color

    &.-prev
      left 0
    
    &.-next
      right 0

  &_slider
    padding 50px 30px
    box-sizing border-box
    width calc(100% - 100px)

  &_item
    display flex
    margin 0 auto
    width calc(100% - 100px)
    border-radius 15px
    box-sizing border-box
    padding 20px
    overflow hidden

    background-color main-color-1

    box-shadow: 0 14px 28px rgba(0,0,0,0.25), 0 10px 10px rgba(0,0,0,0.22)

  &_photosWrap
    flex-shrink 0
    max-width 400px
    width 100%
    margin-right 20px

  &_mainPhoto
    flex-shrink 0
    width 100%
    height 300px
    border-radius 15px
    overflow hidden
    margin-bottom 10px

  &_photo
    display block
    width 100%
    height 100%

    object-position center
    object-fit cover

  &_previews
    width 100%
    display flex

  &_preview
    flex-shrink 0
    display block
    width 70px
    height 40px
    margin-right 10px
    border-radius 5px

    &:last-child
      margin-right 0

  &_info
    width 100%
    height 100%
    color main-color-2
