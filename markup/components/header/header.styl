.header
  position relative

  width 100%
  transition .2s all
      
  &_headLine
    width 100%
    border-bottom 1px solid main-color-1

  &_nav
    position absolute
    top 100%
    left 0
    //transform translateY(-100%)

    width 100%

    &.-sticky
      position fixed
      left 0
      top 0
      z-index 100

      border-bottom 1px solid main-color-1

      background-color main-color-2

  &_navWrap
    max-width ContentWidth
    margin 0 auto
    padding 20px 0

  &_links
    display flex
    align-items center
    justify-content space-between
    width 100%

  &_navLink
    position relative

    margin-right 30px

    font-family Gilroy
    color main-color-1
    font-size 14px
    font-weight 700
    text-decoration none
    text-transform uppercase

    transition .2s all

    &.-active,
    &:hover
      color hover-color

      &::before
        opacity 1
        visibility visible

    &::before
      content ''
      position absolute
      left 50%
      bottom -10px
      transform translateX(-50%)

      display block
      width 30px
      height 3px

      visibility hidden
      opacity 0
      transition .2s all

      background-color hover-color

    &:last-child
      margin-right 0