.popupsServices
  display block

  &_item
    display none
    flex-direction column

    &.-show
      display flex

  &_photo
    flex-shrink 0
    display block
    width 100%
    height 300px
    border-radius 15px 15px 0 0

    object-fit cover
    object-position center

    & > *
      object-fit cover
      object-position center

    @media (max-width bPhone)
      height 200px

  &_infoGroup
    height 100%
    box-sizing border-box
    display block
    padding 20px

    @media (max-width bTablet)
      padding 15px

    @media (max-width bPhone)
      padding 13px

  &_title
    position relative

    display block
    margin 0 0 25px

    font-family OpenSans
    color main-color-2

    &::before
      content ''
      position absolute
      left 0
      bottom -10px

      display block
      width 70px
      height 5px

      background-color hover-color

      @media (max-width bTablet)
        bottom -7px

        width 60px
        height 3px

  &_text
    display block
    height 100%
    max-height 300px
    overflow auto

    line-height 1.4    
    color main-color-2
    font-size 18px

    @media (max-width bTablet)
      font-size 16px

    @media (max-width bPhone)
      max-height 250px
      
      font-size 14px

    & p
      margin-top 0
      margin-bottom 10px

      &:last-of-type
        margin-bottom 0

    & ul
      padding 0
      margin 0 0 10px

      & li
        display block
        margin 10px 0 0
        list-style none