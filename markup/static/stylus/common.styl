// Common styles of the project

html, body
  height 100%


.page
  font-family OpenSans
  color main-color-1
  font-size 16px

.wrap
  position relative

  width 100%
  height 100vh
  display flex
  flex-direction column

.video_wrap
  position absolute
  top 0
  left 0
  bottom 0
  right 0
  z-index -1
  
  overflow hidden

  &::before
    content ''
    position absolute
    top 0
    left 0
    bottom 0
    right 0

    background: rgba(0,0,0,.5)

  & video
    width 100%
    height auto

.forBack
  background-color main-color-2
  
  background-image url(__static__assets/services/back.png)
  background-repeat no-repeat
  background-size 800px 1350px
  background-position 100% -200px

.title
  position relative

  margin 0 0 100px

  font-size 40px
  font-family Gilroy
  font-weight 800
  color main-color-2

  text-align center

  &.-darkTheme
    color main-color-1

  &::before
    content ''
    position absolute
    bottom -20px
    left 50%
    transform translate(-50%, 0)

    display block
    width 200px
    height 10px

    background-color hover-color

.subtitle
  margin 0

  font-size 20px
  font-family Gilroy
  font-weight 700
  color main-color-2

  &.-darkTheme
    color main-color-1

.formLink
  display block
  padding 15px 20px
  border-radius 10px

  text-decoration none
  color main-color-1

  background-color hover-color
