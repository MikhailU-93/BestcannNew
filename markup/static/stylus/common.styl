// Common styles of the project

html, body
  height 100%


.page
  overflow-x hidden

  font-family OpenSans
  color main-color-1
  font-size 16px
  line-height 1.25

  @media (max-width bTablet)
    font-size 15px

  & .swiper-pagination
    bottom 0

    & .swiper-pagination-bullet
      width 12px
      height 12px
      margin 0 6px

    & .swiper-pagination-bullet-active
      background-color hover-color

    &.-darkTheme
      & .swiper-pagination-bullet
        background-color main-color-1

      & .swiper-pagination-bullet-active
        background-color hover-color

.wrap
  position relative

  width 100%
  height 50vw
  max-height 100vh
  min-height 600px
  display flex
  flex-direction column

  @media (max-width bTablet)
    min-height 550px
    height 45vw

.video_wrap
  position absolute
  top 0
  left 0
  bottom 0
  right 0
  z-index -1
  
  overflow hidden

  &::before
    content ''
    position absolute
    top 0
    left 0
    bottom 0
    right 0

    background: rgba(0,0,0,.5)

  & video
    width 100%
    height auto

.forBack
  background-color main-color-2

  background-image url(__static__assets/services/back.png)
  background-repeat no-repeat
  background-size 800px 1350px
  background-position 100% -200px

  @media (max-width bTablet)
    background-size 640px 1080px

.title
  position relative

  margin 0 0 100px

  font-size 40px
  font-family Gilroy
  font-weight 800
  color main-color-2

  text-align center

  @media (max-width bTablet)
    margin 0 0 70px

    font-size 35px

  &.-darkTheme
    color main-color-1

  &::before
    content ''
    position absolute
    bottom -20px
    left 50%
    transform translate(-50%, 0)

    display block
    width 200px
    height 10px

    background-color hover-color

    @media (max-width bTablet)
      bottom -15px

      width 180px
      height 8px

.subtitle
  margin 0

  font-size 20px
  font-family Gilroy
  font-weight 700
  color main-color-2

  @media (max-width bTablet)
    font-size 18px

  &.-darkTheme
    color main-color-1

.formLink
  display block
  padding 15px 20px
  border-radius 10px

  cursor pointer
  text-decoration none
  color main-color-1

  background-color hover-color

  transition .2s all

  @media (max-width bTablet)
    padding 13px 18px

  &:hover
    transform scale(1.1, 1.1)
