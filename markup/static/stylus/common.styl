// Common styles of the project

html, body
  height 100%
  min-width 320px
  
.page
  overflow-x hidden

  font-family Roboto
  font-weight 400
  color main-color-1
  font-size 16px
  line-height 1.25

  @media (max-width bTablet)
    font-size 15px

  @media (max-width bSmallTablet)
    font-size 14px

  @media (max-width bPhone)
    font-size 13px

  @media (max-width bSmallPhone)
    font-size 12px

  & .swiper-pagination
    bottom 0

    & .swiper-pagination-bullet
      width 12px
      height 12px
      margin 0 6px

      background-color rgba(0, 0, 0, .2)

      for $j in (1..12)
        &:nth-child({$j})
          animation-delay: ($j) * .2s

      &.-animate
        animation-name fadeInDown
        animation-fill-mode forwards

      @media (max-width bSmallestPhone)
        width 9px
        height 9px
        margin 0 5px

    & .swiper-pagination-bullet-active
      background-color hover-color

    &.-darkTheme
      & .swiper-pagination-bullet
        background-color rgba(255, 255, 255, .6)

      & .swiper-pagination-bullet-active
        background-color hover-color

.wrap
  position relative

  width 100%
  height 52vw
  max-height 100vh
  min-height 600px
  display flex
  flex-direction column

  @media (max-width bTablet)
    min-height 550px
    height 45vw

  @media (max-width bSmallTablet)
    min-height 500px

  @media (max-width bPhone)
    min-height 450px

  @media (max-width bSmallPhone)
    min-height 400px
    
.video_wrap
  position absolute
  top 0
  left 0
  bottom 0
  right 0
  z-index -1
  
  overflow hidden

  &::before
    content ''
    position absolute
    top 0
    left 0
    bottom 0
    right 0

    background: rgba(0,0,0,.7)

    @media (max-width bSmallTablet)
      background-color transparent

  & video
    width 100%
    height auto

    @media (max-width bSmallTablet)
      display none

  & picture
    display none
    width 100%
    height 100%

    object-fit cover
    object-position center

    & > *
      object-fit cover
      object-position center

    @media (max-width bSmallTablet)
      display block

picture
  position relative

  display flex
  flex-shrink 0

  & > *
    position absolute
    top 0
    left 0

    flex-shrink 0
    width 100%
    height 100%

.forBack
  position relative

  overflow hidden

  background-color main-color-2

  &_bg
    position absolute
    left 100%
    top -200px
    transform translateX(-100%)

    display block
    width 800px
    height 1205px

    object-fit contain
    object-position center

    user-select none
    pointer-events none

    @media (max-width bTablet)
      width 640px
      height 964px

    @media (max-width bSmallTablet)
      top -100px

      width 520px
      height 783px

    @media (max-width bPhone)
      width 470px
      height 708px

    @media (max-width bSmallestPhone)
      top 0

      width 235px
      height 354px

.title
  position relative

  margin 0 0 100px

  font-size 40px
  font-family OpenSans
  font-weight 800
  color main-color-2

  text-align center

  @media (max-width bTablet)
    margin 0 0 70px

    font-size 35px

  @media (max-width bSmallTablet)
    margin 0 0 60px

    font-size 30px

  @media (max-width bPhone)
    margin 0 0 40px
    
    font-size 25px

  @media (max-width bSmallPhone)
    margin 0 0 30px

    font-size 22px

  @media (max-width bSmallestPhone)
    font-size 20px

  &.-darkTheme
    color main-color-1

  &::before
    content ''
    position absolute
    bottom -20px
    left 50%
    transform translate(-50%, 0)

    display block
    width 200px
    height 10px

    background-color hover-color

    @media (max-width bTablet)
      bottom -15px

      width 180px
      height 8px

    @media (max-width bPhone)
      bottom -12px

      width 160px
      height 6px

    @media (max-width bSmallPhone)
      bottom -9px

    @media (max-width bSmallestPhone)
      width 100px
      height 4px

.subtitle
  margin 0

  font-size 20px
  font-family OpenSans
  font-weight 700
  color main-color-2

  @media (max-width bTablet)
    font-size 18px

  @media (max-width bSmallTablet)
    font-size 17px

  @media (max-width bPhone)
    font-size 16px

  @media (max-width bSmallPhone)
    font-size 15px

  @media (max-width bSmallestPhone)
    font-size 14px

  &.-darkTheme
    color main-color-1

.formLink
  display block
  padding 15px 20px
  border-radius 10px

  cursor pointer
  text-decoration none
  color main-color-1

  background-color hover-color

  transition .2s all

  @media (max-width bTablet)
    padding 13px 18px

  @media (max-width bPhone)
    padding 11px 16px

  @media (max-width bSmallestPhone)
    padding 10px 14px

  &:hover
    transform scale(1.1, 1.1)

.-animate
  animation-duration .8s
  animation-timing-function linear

.animateEl
  opacity 0

@keyframes fadeInDown
  from
    transform translate(0, 100%)
  to
    opacity 1
    transform translate(0, 0)

@keyframes fadeInDown50
  from
    transform translate(-50%, 100%)
  to
    opacity 1
    transform translate(-50%, -50%)

@keyframes fadeInLeft
  from
    transform translate(-100%, 0)
  to
    opacity 1
    transform translate(0, 0)

@keyframes fadeInLeft50
  from
    transform translate(-100%, -50%)
  to
    opacity 1
    transform translate(0, -50%)

@keyframes fadeInRight
  from
    transform translate(100%, 0)
  to
    opacity 1
    transform translateY(0, 0)

@keyframes fadeInRight50
  from
    transform translate(100%, -50%)
  to
    opacity 1
    transform translateY(0, -50%)